<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.WebzonPlanActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="@dimen/_50sdp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_7sdp">

                    <ImageView
                        android:id="@+id/cross_arrow"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/ic_close_black_24dp"
                        android:backgroundTint="@color/black" />
                    <ImageView
                        android:id="@+id/img_logo"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="@dimen/_30sdp"
                        android:layout_toRightOf="@id/cross_arrow"
                        android:background="@drawable/logo"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@id/img_logo"
                        android:gravity="left|center"
                        android:text="Webzon"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:textColor="@android:color/black"
                        android:textSize="25sp"
                        android:textStyle="bold" />
                </RelativeLayout>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="Subscribe to a plan that best suites your businees requirement "
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:textStyle="bold"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_gravity="center"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvquarterly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Quarterly"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:textStyle="bold" />
                <Switch
                    android:id="@+id/btn_sw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingRight="@dimen/_5sdp"
                    android:layout_toRightOf="@id/tvquarterly"
                    tools:ignore="TouchTargetSizeCheck" />
                <TextView
                    android:id="@+id/tvyearly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Yearly"
                    android:layout_toRightOf="@id/btn_sw"
                    android:textColor="@color/grey"
                    android:textSize="13sp"
                    android:textStyle="bold"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:weightSum="1"
                android:gravity="center"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".60"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/grey"
                    android:textSize="13sp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tvLite"
                    android:layout_width="0dp"
                    android:layout_weight=".20"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="lite"
                    android:textAllCaps="true"
                    android:textColor="@color/grey"
                    android:textSize="13sp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tvPremium"
                    android:layout_width="0dp"
                    android:layout_weight=".20"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="premium"
                    android:textAllCaps="true"
                    android:textColor="@color/grey"
                    android:textSize="13sp"
                    android:textStyle="bold"/>

            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rec_plan"
                android:layout_width="match_parent"
                android:layout_height="300dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:weightSum="1"
                android:gravity="center"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardviewLite"
                    android:layout_width="0dp"
                    android:layout_weight=".50"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_height="@dimen/_50sdp"
                    app:cardElevation="1dp"
                    app:cardCornerRadius="5dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvlite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:gravity="center"
                            android:text="Lite"
                            android:textAllCaps="true"
                            android:textColor="@color/grey"
                            android:textSize="13sp"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/tvliters"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="₹1,999"
                            android:layout_below="@id/tvlite"
                            android:textColor="@color/black"
                            android:textSize="13sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/tvliteyear"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tvlite"
                            android:layout_toRightOf="@id/tvliters"
                            android:gravity="center"
                            android:text="/year"
                            android:textColor="@color/grey"
                            android:textSize="13sp"
                            android:textStyle="bold" />
                        <ImageView
                            android:id="@+id/img_lite_right"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:visibility="gone"
                            android:background="@drawable/right_img" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardviewPremimum"
                    android:layout_width="0dp"
                    android:layout_weight=".50"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_height="@dimen/_50sdp"
                    app:cardElevation="1dp"
                    app:cardCornerRadius="5dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tvpremium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Premium"
                            android:textAllCaps="true"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:textColor="@color/grey"
                            android:textSize="13sp"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/tvpremiumrs"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="₹6,999"
                            android:layout_below="@id/tvpremium"
                            android:textColor="@color/black"
                            android:textSize="13sp"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/tvpremiumyear"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="/year"
                            android:layout_below="@id/tvpremium"
                            android:layout_toRightOf="@id/tvpremiumrs"
                            android:textColor="@color/grey"
                            android:textSize="13sp"
                            android:textStyle="bold"/>
                        <ImageView
                            android:id="@+id/img_premium_right"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:visibility="gone"
                            android:background="@drawable/right_img" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:gravity="center|start"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/star_pre_img"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:paddingLeft="@dimen/_10sdp"
                    android:text="Free custom domain only with Premium plan(yearly)"
                    android:textColor="@color/grey"
                    android:textSize="12sp"
                    android:textStyle="bold"/>

            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:gravity="bottom|center"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_alignParentBottom="true"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/btn_subscribe"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:textSize="16dp"
                        android:textAllCaps="false"
                        android:text="Subscribe to Premium for ₹6,999"
                        android:background="@drawable/btn_bg_visit_s"/>

                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>