<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bottomdilog"
        style="@style/Animation.Design.BottomSheetDialog"
        android:orientation="vertical">
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img_cat"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/star_img"/>
            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="All the features to start your online \nbusiness"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:textStyle="bold"/>
            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:text="try free for 14 days, upgrade anytime"
                android:textColor="@android:color/black"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:textSize="15sp" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                >

                <ImageView
                    android:id="@+id/img_cat1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/right_img" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/img_cat1"
                    android:text="Conversion optimized storefronts"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textSize="13sp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                >
                <ImageView
                    android:id="@+id/img_cat2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/right_img"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/img_cat2"
                    android:text="Customizable themes"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textSize="13sp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                >
                <ImageView
                    android:id="@+id/img_cat3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/right_img"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/img_cat3"
                    android:text="10+ plugins"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textSize="13sp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                >
                <ImageView
                    android:id="@+id/img_cat4"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/right_img"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/img_cat4"
                    android:text="Your own Android app"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textSize="13sp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                >
                <ImageView
                    android:id="@+id/img_cat5"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/right_img"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/img_cat5"
                    android:text="Customer &amp; order reports"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textSize="13sp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                >
                <ImageView
                    android:id="@+id/img_cat6"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/right_img"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/img_cat6"
                    android:text="Customizable themes"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textSize="13sp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                >
                <ImageView
                    android:id="@+id/img_cat7"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/right_img"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/img_cat7"
                    android:text="24/7 support"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textSize="13sp" />
            </RelativeLayout>


        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"/>
        <LinearLayout
            android:layout_marginBottom="@dimen/_50sdp"
            android:layout_marginTop="10dp"
            android:gravity="bottom|center"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_continue"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="16dp"
                android:textAllCaps="false"
                android:text="Start your 14-day FREE trial"
                android:background="@drawable/btn_bg_visit_s"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>