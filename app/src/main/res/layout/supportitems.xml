<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="@dimen/_5sdp"
      android:layout_marginBottom="@dimen/_5sdp"
      android:layout_marginTop="@dimen/_5sdp"
      android:gravity="center"
      android:background="@drawable/white_border"
      android:layout_marginRight="@dimen/_5sdp"
      android:orientation="vertical">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:paddingLeft="@dimen/_10sdp"
          android:paddingRight="@dimen/_10sdp"
          android:paddingTop="@dimen/_10sdp"
          android:paddingBottom="@dimen/_10sdp"
          android:orientation="vertical">
          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center|start">
              <TextView
                  android:id="@+id/tvquarterly"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:text="Choose support type"
                  android:textColor="@color/black"
                  android:textSize="15sp"
                  android:textStyle="bold" />

              <ImageView
                  android:id="@+id/cross_arrow"
                  android:layout_width="30dp"
                  android:layout_height="30dp"
                  android:layout_alignParentRight="true"
                  android:background="@drawable/ic_close_black_24dp"
                  android:backgroundTint="@color/black" />
          </RelativeLayout>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="100dp"
              android:weightSum="1"
              android:gravity="center"
              android:orientation="horizontal">
              <androidx.cardview.widget.CardView
                  android:id="@+id/cardviewLite"
                  android:layout_width="0dp"
                  android:layout_weight=".50"
                  android:layout_marginLeft="@dimen/_5sdp"
                  android:layout_marginRight="@dimen/_5sdp"
                  android:layout_height="@dimen/_70sdp"
                  app:cardCornerRadius="5dp">
                  <LinearLayout
                      android:id="@+id/linearLivechat"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:gravity="center"
                      android:layout_gravity="center"
                      android:orientation="vertical">
                      <ImageView
                          android:id="@+id/img_lite_right"
                          android:layout_width="30dp"
                          android:layout_height="30dp"
                          android:visibility="visible"
                          android:background="@drawable/ic_baseline_chat_bubble_outline_24" />
                      <TextView
                          android:id="@+id/tvliteyear"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_below="@id/img_lite_right"
                          android:gravity="center"
                          android:text="Live Chat"
                          android:textColor="@color/grey"
                          android:textSize="13sp"
                          android:textStyle="bold" />
                  </LinearLayout>
              </androidx.cardview.widget.CardView>
              <androidx.cardview.widget.CardView
                  android:id="@+id/cardviewPremimum"
                  android:layout_width="0dp"
                  android:layout_weight=".50"
                  android:layout_gravity="center"
                  android:layout_height="@dimen/_70sdp"
                  app:cardCornerRadius="5dp">
                  <LinearLayout
                      android:id="@+id/linearPhonecall"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:gravity="center"
                      android:orientation="vertical">
                      <ImageView
                          android:id="@+id/img_tt_right"
                          android:layout_width="30dp"
                          android:layout_height="30dp"
                          android:background="@drawable/ic_baseline_call_24" />
                      <TextView
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_below="@id/img_tt_right"
                          android:gravity="center"
                          android:text="Phone Call"
                          android:textColor="@color/grey"
                          android:textSize="13sp"
                          android:textStyle="bold" />
                  </LinearLayout>
              </androidx.cardview.widget.CardView>

          </LinearLayout>
      </LinearLayout>

  </LinearLayout>
</LinearLayout>