<?xml version="1.0" encoding="utf-8"?>
  <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.webzon.Activity.WebzonpcActivity">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">
     <LinearLayout
         android:layout_width="match_parent"
         android:background="@color/purple_200"
         android:layout_height="@dimen/_60sdp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_20sdp">
        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:backgroundTint="@color/white"
            android:background="@drawable/ic_arrow_back_black_24dp"/>

        <TextView
            android:id="@+id/introducing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/back_arrow"
            android:gravity="center"
            android:text="introducing"
            android:textColor="@android:color/white"
            android:textSize="13sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/back_arrow"
            android:gravity="center"
            android:layout_below="@id/introducing"
            android:text="Webzon for PC"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>
     </LinearLayout>
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="200dp"
           android:layout_gravity="center"
           android:gravity="center">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical">
              <LinearLayout
                  android:layout_width="match_parent"
                  android:background="@color/purple_200"
                  android:layout_height="@dimen/_90sdp"/>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/_80sdp"/>
           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:gravity="center">
               <ImageView
                   android:layout_width="@dimen/_250sdp"
                   android:layout_height="@dimen/_150sdp"
                   android:background="@drawable/pc_img"/>
           </LinearLayout>

       </RelativeLayout>
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:gravity="start"
           android:layout_below="@id/introducing"
           android:text="With Webzon for PC,you can"
           android:paddingLeft="@dimen/_20sdp"
           android:textColor="@android:color/black"
           android:textSize="15sp"
           android:textStyle="bold"/>
       <androidx.recyclerview.widget.RecyclerView
           android:id="@+id/rec_pc"
           android:layout_width="match_parent"
           android:layout_height="300dp"/>
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">
           <LinearLayout
               android:layout_marginBottom="@dimen/_10sdp"
               android:gravity="bottom|center"
               android:layout_width="match_parent"
               android:layout_marginLeft="@dimen/_10sdp"
               android:layout_marginRight="@dimen/_10sdp"
               android:layout_alignParentBottom="true"
               android:layout_height="wrap_content">

               <Button
                   android:id="@+id/btn_continue"
                   android:layout_width="match_parent"
                   android:layout_height="50dp"
                   android:textSize="16dp"
                   android:textAllCaps="false"
                   android:text="Visit Webzon for PC"
                   android:background="@drawable/btn_bg_visit_s"/>

           </LinearLayout>
       </RelativeLayout>
   </LinearLayout>
  </LinearLayout>