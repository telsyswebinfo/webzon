<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.HomeActivity"
    android:orientation="vertical">

    <LinearLayout
        android:background="#01458e"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:background="@drawable/logo_white"/>
        <LinearLayout
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center|right">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/location_icon_white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tonk Phatak"
                android:textColor="@color/white"
                android:textSize="18dp"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/arrow_down"/>


        </LinearLayout>

    </LinearLayout>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_margin="15dp"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/home_slider"/>

            <TextView
                android:textColor="#6e6e6e"
                android:layout_marginLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Home / Tonl Phatak / Kirana FMCG &amp; Grocery"/>

            <TextView
                android:layout_marginTop="16dp"
                android:textSize="22dp"
                android:textStyle="bold"
                android:textColor="#6e6e6e"
                android:layout_marginLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kirana FMCG &amp; Grocery in Tonk Phatak"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="2">
                <LinearLayout
                    android:id="@+id/li_home"
                    android:layout_margin="16dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="230dp"
                    android:orientation="vertical"
                    android:background="@drawable/roundedcard">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:background="@drawable/kirana_img"/>

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Agarwal Quality"
                            android:textColor="#1e1e1e"
                            android:textStyle="bold"
                            android:textSize="16sp"/>

                        <TextView
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1,Sankala colony, main road,front Street..."
                            android:textColor="#5e5e5e" />

                    </LinearLayout>


                </LinearLayout>
                <LinearLayout
                    android:layout_margin="16dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="230dp"
                    android:orientation="vertical"
                    android:background="@drawable/roundedcard">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:background="@drawable/pic_2"/>

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sharma Kirana.."
                            android:textColor="#1e1e1e"
                            android:textStyle="bold"
                            android:textSize="16sp"/>

                        <TextView
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gopalpura, main road,front Street..."
                            android:textColor="#5e5e5e" />

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="2">
                <LinearLayout
                    android:layout_margin="16dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="230dp"
                    android:orientation="vertical"
                    android:background="@drawable/roundedcard">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:background="@drawable/pic_3"/>

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Agarwal Quality"
                            android:textColor="#1e1e1e"
                            android:textStyle="bold"
                            android:textSize="16sp"/>

                        <TextView
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1,Sankala colony, main road,front Street..."
                            android:textColor="#5e5e5e" />

                    </LinearLayout>


                </LinearLayout>
                <LinearLayout
                    android:layout_margin="16dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="230dp"
                    android:orientation="vertical"
                    android:background="@drawable/roundedcard">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:background="@drawable/pic_4"/>

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sharma Kirana.."
                            android:textColor="#1e1e1e"
                            android:textStyle="bold"
                            android:textSize="16sp"/>

                        <TextView
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gopalpura, main road,front Street..."
                            android:textColor="#5e5e5e" />

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>



</LinearLayout>