<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/action_bar"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/card_print"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:cardElevation="8dp"
        app:cardPreventCornerOverlap="false"
        app:cardCornerRadius="10dp"
        android:layout_margin="@dimen/_30sdp"
        android:padding="10dp"
        app:cardUseCompatPadding="false">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="top">


            <LinearLayout
                android:id="@+id/li_qrlayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:background="@color/purple_200"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_150sdp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_marginTop="@dimen/_16sdp"
                        android:textSize="@dimen/_15sdp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" We support"/>
                    <TextView
                        android:textStyle="bold"
                        android:textSize="@dimen/_16sdp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="#DigitalIndia"/>

                    <TextView
                        android:layout_marginTop="@dimen/_20sdp"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Scan QR to check our products"/>

                </LinearLayout>

                <LinearLayout
                    android:gravity="bottom"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_150sdp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_name"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/txt_durl"
                        android:textColor="@color/purple_200"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </LinearLayout>


            <RelativeLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_100sdp"
                    app:cardElevation="8dp"
                    app:cardPreventCornerOverlap="false"
                    app:cardCornerRadius="10dp"
                    android:padding="10dp"
                    app:cardUseCompatPadding="false">
                    <LinearLayout
                        android:layout_margin="@dimen/_3sdp"
                        android:id="@+id/li_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:scaleType="fitXY"
                            android:id="@+id/img_qrcode"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                    </LinearLayout>



                </androidx.cardview.widget.CardView>

            </RelativeLayout>

        </RelativeLayout>



    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_margin="16dp"
        android:gravity="center|bottom"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <Button
            android:id="@+id/btn_create_coupons"
            android:layout_marginTop="10dp"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="50dp"
            android:textSize="14dp"
            android:text="Share"
            android:background="@drawable/btn_bg_visit_s"/>

    </LinearLayout>

</LinearLayout>