            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="8dp"
            app:cardElevation="8dp"
            app:cardPreventCornerOverlap="false"
            app:cardCornerRadius="10dp"
            android:padding="10dp"
            app:cardUseCompatPadding="false">>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center|top"
                    android:layout_margin="5dp">


                    <LinearLayout
                        android:layout_marginTop="@dimen/_16sdp"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:background="@drawable/list_bg">

                        <ImageView
                            android:layout_margin="5dp"
                            app:cardBackgroundColor="#eceff4"
                            android:layout_marginTop="@dimen/_16sdp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/icon_gro"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="@dimen/_16sdp"
                        android:paddingLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Order ID: #0D2003"
                            android:textStyle="bold"
                            android:textSize="@dimen/_14sdp"
                            android:textColor="@color/black"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Placed on Jan 15,2021"
                            android:textSize="@dimen/_12sdp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Items: "
                                android:textSize="@dimen/_11sdp"/>
                            <TextView
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="  24"
                                android:textSize="@dimen/_11sdp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="     Total: "
                                android:textSize="@dimen/_11sdp"/>
                            <TextView
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" \u20B9240.00"
                                android:textSize="@dimen/_11sdp"/>


                        </LinearLayout>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center|top">
                            <TextView
                                android:paddingRight="@dimen/_8sdp"
                                android:paddingLeft="@dimen/_8sdp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="COD"
                                android:textColor="@color/white"
                                android:background="@drawable/cod_bg"/>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center|top">

                             <LinearLayout
                                 android:gravity="center"
                                 android:layout_width="@dimen/_30sdp"
                                 android:layout_height="@dimen/_30sdp"
                                 android:background="@drawable/fb_btn">

                                 <ImageView
                                     android:layout_width="@dimen/_15sdp"
                                     android:layout_height="@dimen/_15sdp"
                                     android:background="@drawable/arrow_forward"/>

                             </LinearLayout>

                        </LinearLayout>




                    </LinearLayout>


                </LinearLayout>
                <LinearLayout
                    app:cardBackgroundColor="#eceff4"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageView
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:background="@drawable/red_dot"/>
                    <TextView
                        android:paddingLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Order Rejected"
                        android:layout_weight="1"/>
                    <TextView
                        android:paddingRight="@dimen/_10sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jan 15,2021" />

                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

