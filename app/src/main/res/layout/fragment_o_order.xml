                                android:textSize="@dimen/_11sdp"/>


                        </LinearLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Items: 11     Total: \u20B9640.00"
                            android:textSize="@dimen/_11sdp"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center|top">
                            <TextView
                                android:paddingRight="@dimen/_8sdp"
                                android:paddingLeft="@dimen/_8sdp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Paid"
                                android:textColor="@color/white"
                                android:background="@drawable/paid_bg"/>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center|top">

                            <LinearLayout
                                android:gravity="center"
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:background="@drawable/fb_btn">

                                <ImageView
                                    android:layout_width="@dimen/_15sdp"
                                    android:layout_height="@dimen/_15sdp"
                                    android:background="@drawable/arrow_forward"/>

                            </LinearLayout>

                        </LinearLayout>




                    </LinearLayout>


                </LinearLayout>
                <LinearLayout
                    app:cardBackgroundColor="#eceff4"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageView
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:background="@drawable/yellow_dot"/>
                    <TextView
                        android:paddingLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Order Pending"
                        android:layout_weight="1"/>
                    <TextView
                        android:paddingRight="@dimen/_10sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jan 15,2021" />

                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

