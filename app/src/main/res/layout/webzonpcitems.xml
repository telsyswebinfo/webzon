<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        >

        <ImageView
            android:id="@+id/img_cat7"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/right_img" />
        <TextView
            android:id="@+id/tvtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img_cat7"
            android:text="Upload porducts in bulk"
            android:textColor="@android:color/black"
            android:layout_marginLeft="@dimen/_10sdp"
            android:textSize="15sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img_cat7"
            android:text="Upload thousands of products to your digital store quicky"
            android:layout_below="@id/tvtitle"
            android:layout_marginLeft="@dimen/_10sdp"
            android:textSize="13sp" />
    </RelativeLayout>
</LinearLayout>