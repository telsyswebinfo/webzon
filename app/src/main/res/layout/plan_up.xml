<?xml version="1.0" encoding="utf-8"?>
<LinearLayout app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    android:id="@+id/fragment_history_menu_bottom"
    android:layout_width="@dimen/_300sdp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    android:gravity="bottom"
    android:layout_gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        style="@style/Animation.Design.BottomSheetDialog"
        android:layout_width="match_parent"
        android:background="@drawable/bottomdilog"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">




        <TextView
            android:layout_margin="@dimen/_16sdp"
            android:textSize="@dimen/_11sdp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upgrade your Webzon Premium subscription and\n generate more sales!"/>

        <LinearLayout
            android:id="@+id/li_upgrade_premium"
            android:layout_marginBottom="@dimen/_50sdp"
            android:layout_marginTop="10dp"
            android:gravity="bottom|center"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_continue"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="16dp"
                android:textAllCaps="false"
                android:text="Upgrade to Premium"
                android:background="@drawable/btn_bg_visit_s"/>

        </LinearLayout>
        <TextView
            android:id="@+id/txt_continue"
            android:textSize="@dimen/_10sdp"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Continue With free Plan"/>
        <View
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/black"/>

    </LinearLayout>


</LinearLayout>